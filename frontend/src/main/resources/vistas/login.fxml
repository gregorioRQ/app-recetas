<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="584.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.controlador.LoginController">
    <VBox alignment="CENTER" maxHeight="300" maxWidth="400" spacing="10.0" styleClass="vboxContainer" stylesheets="@../estilos/login.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        
        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="lblIniciarSesion" stylesheets="@../estilos/login.css" text="Iniciar Sesión">
         <font>
            <Font size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></Label>
        
        <Label maxWidth="1.7976931348623157E308" text="Correo electrónico:">
         <font>
            <Font size="16.0" />
         </font></Label>
        <TextField fx:id="correoField" promptText="Ingrese su correo" styleClass="textFieldCorreo" stylesheets="@../estilos/login.css">
         <font>
            <Font size="14.0" />
         </font></TextField>
        
        <Label maxWidth="1.7976931348623157E308" text="Contraseña:">
         <font>
            <Font size="16.0" />
         </font></Label>
        <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" styleClass="passFieldPass" stylesheets="@../estilos/login.css">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin></PasswordField>
        
        <Button fx:id="loginButton" onAction="#handleLoginButtonAction" prefHeight="37.0" prefWidth="137.0" styleClass="btnIniciarSesion" stylesheets="@../estilos/login.css" text="Iniciar Sesión">
         <font>
            <Font size="14.0" />
         </font></Button>
        
         <Button fx:id="registerButton" onAction="#handleRegisterButtonClick" prefHeight="37.0" prefWidth="137.0" styleClass="btnRegistrarse" stylesheets="@../estilos/login.css" text="Registrarse">
         <font>
            <Font size="14.0" />
         </font></Button>
    </VBox>
</AnchorPane>
